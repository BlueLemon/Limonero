<%= paginate @people %>
<%= table_for(@people) do |t| %>
  <%= t.data do
    t.cell(:name)
    t.cell(:tdoc).try :name
    t.cell(:civil).try :name 
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |person|
      cell_content = link_to 'Detalles', person
      cell_content += " | "
      cell_content += link_to 'Editar', edit_person_path(person)
      cell_content += " | "
      cell_content += link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete
    end
  end %>
<% end %>
