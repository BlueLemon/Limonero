<%= table_for(@lotes) do |t| %>
  <%= t.data do
    t.cell(:titular)
    t.cell(:manzana)
    t.cell(:loteo)
    t.cell(:parcela)
    t.cell(:partida)
    t.cell(:estado)
    t.cell(:ncuotas)
    t.cell(:cuota)
    t.cell(:interes)
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |lote|
      cell_content = ""
      cell_content += "#{link_to 'Ver', lote}"
      cell_content += "#{link_to 'Editar', edit_lote_path(lote)}"
      if lote.pagable?
        # cell_content += "#{ link_to 'Ver pagos', payment_pays_path(lot.payment_actual) }"
        # cell_content += "#{ link_to 'Generar Pago', new_payment_pay_path(lot.payment_actual) }"
      end
      cell_content += ""
      raw cell_content
    end
  end %>
<% end %>

