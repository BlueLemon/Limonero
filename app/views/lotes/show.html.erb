<p id="notice"><%= notice %></p>
<h2>Lote</h2>
<%= link_to 'Editar', edit_lote_path(@lote) %> |
<%= link_to 'Ver todos los lotes', lotes_path %>
<p>
  <b>Manzana:</b>
  <%= @lote.manzana %>
</p>

<p>
  <b>Loteo:</b>
  <%= @lote.loteo %>
</p>

<p>
  <b>Parcela:</b>
  <%= @lote.parcela %>
</p>

<p>
  <b>Partida:</b>
  <%= @lote.partida %>
</p>

<h2>Valor</h2>
<%= link_to 'Actualizar precio', new_lote_avaluo_path(@lote) %>
<%= render :partial => "avaluos/avaluo", :locals=>{:@avaluo => @lote.avaluo} %>

<% if @lote.avaluo %>
  <h2>Plan de cuentas</h2>
  <% if !@lote.avaluo.contratos.last %>
    <%= link_to 'Crear plan de pagos', new_lote_contrato_path(@lote) %>
  <% end %>

  <% @lote.avaluo.contratos.each do |contrato| %>
    <%= render :partial => "/contratos/contratos",
               :locals => { :@contratos=>contrato.compradores } %>
  <% end %>

<% end %>



