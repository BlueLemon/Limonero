<div class="details">
<h2>Lote</h2>
<%= link_to 'Editar', edit_lote_path(@lote) %> |
<%= link_to 'Ver todos los lotes', lotes_path %>
<p>
  <b>Manzana:</b>
  <%= @lote.manzana %>
</p>

<p>
  <b>Loteo:</b>
  <%= @lote.loteo %>
</p>

<p>
  <b>Parcela:</b>
  <%= @lote.parcela %>
</p>

<p>
  <b>Partida:</b>
  <%= @lote.partida %>
</p>


<h2>Plan de cuentas</h2>
  <% if @contrato %>
    <%= render :partial => "contratos/contrato" %>
  <% else %>
    <h2>Valor</h2>
    <p>
      <b>Cantidad de cuotas:</b>
      <%= @lote.ncuotas %>
    </p>
    <p>
      <b>Valor de cada cuota:</b>
      <%= @lote.cuota %>
    </p>
    <p>
      <b>Interes:</b>
      <%= @lote.interes %>
    </p>

    <%= link_to 'Crear plan de pagos', new_lote_contrato_path(@lote) %>
  <% end %>
</div>
