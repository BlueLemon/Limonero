<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Calle</th>
    <th>Numero</th>
    <th>Otro</th>
    <th>Telefono</th>
    <th>Person</th>
    <th>Taddress</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.calle %></td>
    <td><%= address.numero %></td>
    <td><%= address.otro %></td>
    <td><%= address.telefono %></td>
    <td><%= address.person_id %></td>
    <td><%= address.taddress_id %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

