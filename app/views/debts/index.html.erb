<h1>Listing debts</h1>

<table>
  <tr>
    <th>Payment</th>
    <th>Monto cents</th>
    <th>Monto currency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @debts.each do |debt| %>
  <tr>
    <td><%= debt.payment_id %></td>
    <td><%= debt.monto_cents %></td>
    <td><%= debt.monto_currency %></td>
    <td><%= link_to 'Show', debt %></td>
    <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
    <td><%= link_to 'Destroy', debt, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

